<div class="page">
  <div class="page_content">
	<div class="page_block">
    <header class="header row">
      {{> header_logo}}

      <nav class="header_nav col-9">

		<div class="header_nav_right">{{> nav0 list=header}}</div>
		
      </nav>
    </header>

	</div>

	<div class="page_block">
		{{> hero title=hero.title text=hero.text}}
	</div>
	
	<div class="page_block">
		<main class="row g-0 plans">
			{{#each plans}}
			<div class="col plans_card ">

							
				<div class="card plans_card">
					<div class="card-header">{{name}}</div>
					
					<div class="card-body">
						<div class="card_block">
							<span class="card_price_amount">${{price}}</span>
							<span class="card_price_duration">/ mo</span>
						</div>
						<ul class="card_block">
							{{#each features}}
							<li class="card_description_item">{{this}}</li>
							
							{{/each}}
						</ul>
						<div class="card_block">
							<button class="btn {{#if @first }}btn-outline-primary{{else}}btn-primary{{/if}} card_button">{{button}}</button>
						</div>
					</div>
				</div>
			
				
			</div>
			{{/each}}
			
		</main>
	</div>

<div class="page_block">
	<div class="calc">
		<caption>my table</caption>
	<table class="table">
		<tbody>
			{{#each footer}}
			<tr>
				{{#each links}}
				<td>
					{{text}}
				</td>
				{{/each}}
				<td></td>
			</tr>
			{{/each}}
			
		</tbody>
	</table>
	</div>
</div>

	<div class="page_block">

		<footer class="row footer">
			<div class="col-3">
				{{> header_logo}}
				<span class="footer-copyright">Copyright 2023-2024</span>
			</div>
			{{#each footer}}
				<div class="col-3">
					<span class="footer_title">{{title}}</span>
					{{> nav0 list=links isVertical=true}}
				</div>
			{{/each}}
		</footer>
	</div>
  </div>
</div>