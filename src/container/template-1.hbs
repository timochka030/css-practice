<div class="page">
  <div class="page_content">
	<div class="page_block">
    <header class="header row">
      {{> header_logo}}

      <nav class="header_nav col-9">

		<div class="header_nav_right">{{> nav0 list=header}}</div>
		
      </nav>
    </header>

    <hr class="divider" />
	</div>

	<div class="page_block">
		{{> hero title=hero.title text=hero.text}}
	</div>
	
	<div class="page_block">
		<main class="row g-0 plans">
			{{#each plans}}
			<div class="col plans_card">

				{{> card data=this}}
				
			</div>
			{{/each}}
			
		</main>
	</div>

	<div class="page_block">
		<hr class="divider" />

		<footer class="row footer">
			<div class="col-3">
				{{> header_logo}}
				<span class="footer-copyright">Copyright 2023-2024</span>
			</div>
			{{#each footer}}
				<div class="col-3">
					<span class="footer_title">{{title}}</span>
					{{> nav0 list=links isVertical=true}}
				</div>
			{{/each}}
		</footer>
	</div>
  </div>
</div>