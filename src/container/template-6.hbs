<header class="header">
	<a href="#test">
      {{> header_logo}}
	  </a>
      <nav class="header_nav">
		<div class="header_nav_right">{{> nav0 list=header}}</div>
      </nav>
</header>

<main class="main">
	{{#with info}}
		<div class="messages">
			<h1 class="messages_title messages_title_2">{{title}}</h1>
			
				<div class="msg">
					<p class="msg_text text_description">{{description}}</p>
				</div>
		</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>

		<div class="form_input_lists">
			{{#each inputs}}
				<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form_input{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}" >
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div> 
		

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates_card">
{{#with updates}}
<h2 class="recent_updates recent_line">{{title}}</h2>
<div>
	
	{{#each list}}
	<div class="list_media line">
		<img src="/img/images.jpg" class="user_image">
			<strong class="user_name">{{nickname}}</strong>
			<p class="user_text">{{description}}</p>
	</div>
	{{/each}}
<br>
{{#with show_all}}
	<a href="{{url}}" class="messages_link">{{text}}</a>
{{/with}}
</div>
{{/with}}
</div>

<div class="">
	<h1>{{expirience.title}}</h1>
	<div>
	{{#with expirience}}
		
		<div class="hot">
		<div class="hot_text">{{badge}}</div>
		</div>
		

		<div class="flex ">
		{{#each list}}
		
		<div class="flex_cardu">
				<h3 class="">{{name}}</h3>
				<p class="">{{details}}</p>
		</div>
	
		{{/each}}
		</div>
	{{/with}}
	</div>
</div>

<footer class="footer" id="test">
			<div>
				{{> header_logo}}
				<span class="footer-copyright">Copyright 2023-2024</span>
			</div>
			{{#each footer}}
				<div>
					<span class="footer_title">{{title}}</span>
					{{> nav0 list=links isVertical=true}}
				</div>
			{{/each}}
</footer>