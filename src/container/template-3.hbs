
<header class="header">
      {{> header_logo}}
      <nav class="header_nav">
		<div class="header_nav_right">{{> nav0 list=header}}</div>
      </nav>
</header>

{{#with hero}}
<div class="hero">
	<div class="hero_content">
		<h1 class="hero_title">{{title}}</h1>
		<p class="hero_text">{{text}}</p>
	</div>
	<img class="hero_image" src="{{photo}}" alt="Hero image">
</div>
{{/with}}


<main class="blog">
	{{#each blog}}
		{{> cardBlog data=this}}
	{{/each}}
</main>

{{#with form}}
<div class="form">
	<div class="form_content">
		<h3 class="form_title">{{title}}</h3>
		<p class="form_info">{{info}}</p>
	</div>
	<div class="form_action">
		<a href="{{href}}" class="button form_button">{{button}}</a>
	</div>
</div>
{{/with}}

<footer class="footer">
			<div>
				{{> header_logo}}
				<span class="footer-copyright">Copyright 2023-2024</span>
			</div>
			{{#each footer}}
				<div>
					<span class="footer_title">{{title}}</span>
					{{> nav0 list=links isVertical=true}}
				</div>
			{{/each}}
</footer>